{
  "manifest_version": 2,
  "name": "LinkShare",
  "description": "Share links instantly",
  "version": "1.2.0",
  "author": "Kent Leo L. Makibulan",
  "icons": { 
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "incognito": "not_allowed",
  "permissions": ["tabs"],
  "browser_action": {
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "default_title": "LinkShare",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["qrcode.js"]
    }
  ]
}